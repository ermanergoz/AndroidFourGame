<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameOverActivity" android:id="@+id/gameOverActivity">

    <Button
            android:id="@+id/restartButton"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:background="#fef9e7"
            android:text="RESTART"
            app:layout_constraintBottom_toTopOf="@+id/mainMenuButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/finalScoreTextView" />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finalScoreTextView"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/winnerTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/restartButton" android:textColor="@android:color/black"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/winnerTextView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintBottom_toTopOf="@+id/finalScoreTextView"
            android:textSize="42sp" android:textColor="@android:color/black" android:textStyle="bold"/>

    <Button
            android:id="@+id/mainMenuButton"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="#fef9e7"
            android:text="MAIN MENU"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/restartButton" />
</androidx.constraintlayout.widget.ConstraintLayout>